package view;

import java.awt.CardLayout;
import java.awt.Color;
import java.awt.GridBagLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class MyWannacry extends JFrame implements ActionListener{
	public MyWannacry(){
		this.setTitle("My Wannacry 1.0");
		
		this.setSize(600, 400);
		
		this.getContentPane().setBackground(Color.RED);
		
		JPanel jPanelFileSrc = new JPanel();
		jPanelFileSrc.setLayout(new CardLayout());
		JLabel jLableFileSource = new JLabel("File source");
		JTextField jTextField = new JTextField(20);
		JButton jButton = new JButton("Chon File");
		jPanelFileSrc.add(jLableFileSource);
		jPanelFileSrc.add(jTextField);
		jPanelFileSrc.add(jButton);
		
		this.add(jPanelFileSrc);
		
		JPanel jPanelFileDest = new JPanel();
		jPanelFileDest.setLayout(new CardLayout());
		JLabel jLableFileDest = new JLabel("File source");
		JTextField jTextFieldFileDest = new JTextField(20);
		JButton jButtonFileDest = new JButton("Chon File");
		jPanelFileDest.add(jLableFileDest);
		jPanelFileDest.add(jTextFieldFileDest);
		jPanelFileDest.add(jButtonFileDest);
		
		this.add(jPanelFileDest);
		
		this.setVisible(true);
	}
	
	

	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
		
	}
	
	public static void main(String[] args) {
		new MyWannacry();
	}
}
